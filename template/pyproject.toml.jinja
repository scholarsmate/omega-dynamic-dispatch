[build-system]
requires = ["setuptools>=68", "setuptools-scm>=8", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ project_slug }}"
dynamic = ["version"]
description = "{{ description }}"
requires-python = ">={{ python_min }}"
readme = "README.md"
license = {file = "LICENSE"}
authors = [{name = "{{ author }}"}]
dependencies = ["click>=8.1"]

[project.scripts]
{{ project_slug }} = "{{ project_slug }}.cli:main"

{% if use_entrypoints %}
[project.entry-points."{{ project_slug }}.plugins"]
# third-party plugins can register here
{% endif %}

[tool.setuptools]
package-dir = {"" = "src"}

[tool.setuptools.packages.find]
where = ["src"]

[tool.setuptools_scm]
version_scheme = "release-branch-semver"
local_scheme = "node-and-date"
